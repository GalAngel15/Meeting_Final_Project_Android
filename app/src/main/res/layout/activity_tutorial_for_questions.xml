<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">


    <!-- תיבת הטקסט המרכזית -->
    <LinearLayout
        android:id="@+id/question_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_purple"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="כל שאלה שתענו עליה תקרב אתכם לאנשים שבאמת מתאימים לכם - באופי, בערכים ובדרך החיים.\n\nכמה רגעים של כנות עכשיו - שנים של אהבה בעתיד.\n\nמוכנים להתחיל? ענו על השאלון וגלו מי מחכה לכם ממש מעבר לפינה."
            android:textSize="16sp"
            android:textColor="#000"
            android:textAlignment="center"/>
    </LinearLayout>

    <!-- כפתור התחל שאלון -->
    <Button
        android:id="@+id/btn_start_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="התחל שאלון"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_rounded_purple"
        android:layout_below="@id/question_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
