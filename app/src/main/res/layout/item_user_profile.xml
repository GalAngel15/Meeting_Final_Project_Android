<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginBottom="12dp">

    <!-- תמונת המשתמש -->
    <ImageView
        android:id="@+id/user_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/type_logo_placeholder" />

    <!-- שם המשתמש -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_image"
        android:text="Username"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <!-- אחוז ההתאמה -->
    <TextView
        android:id="@+id/match_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_image"
        android:layout_below="@id/user_name"
        android:layout_marginTop="4dp"
        android:text="85% match"
        android:textColor="@android:color/holo_green_dark" />

    <!-- טיפוס האישיות -->
    <TextView
        android:id="@+id/user_personality_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_image"
        android:layout_below="@id/match_percentage"
        android:layout_marginTop="4dp"
        android:text="Personality type: ENFJ"
        android:textColor="@android:color/darker_gray" />

    <!-- סטטוס -->
    <TextView
        android:id="@+id/user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_image"
        android:layout_below="@id/user_personality_type"
        android:layout_marginTop="4dp"
        android:text="Status: Available"
        android:textColor="@android:color/darker_gray" />

    <!-- כפתור לייק -->
    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:contentDescription="Like"
        android:src="@drawable/empty_heart"
        app:tint="@android:color/holo_red_dark" />
</RelativeLayout>
