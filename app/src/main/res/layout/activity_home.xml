<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- טקסט ברוכים הבאים (ממוקם למעלה ובמרכז) -->
        <TextView
            android:id="@+id/textWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ברוך הבא, נועם"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <!-- כפתור התפריט (ממוקם למעלה בשמאל) -->
        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/menu"
            android:contentDescription="@string/navigation_drawer_open"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <!-- כפתורי פעולה קבועים למטה (מעל הניווט התחתון) -->
        <LinearLayout
            android:id="@+id/actionButtons"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/bottom_navigation"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button_shadow"
            android:padding="8dp"
            android:elevation="8dp">

            <ImageButton
                android:id="@+id/buttonDislike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_button_circle"
                android:src="@drawable/ic_unlike"
                android:contentDescription="@string/dislike" />

            <Space
                android:layout_width="32dp"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/buttonLike"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_button_circle"
                android:src="@drawable/ic_heart"
                android:contentDescription="@string/like" />
        </LinearLayout>

        <!-- כרטיס הפרופיל הראשי עם גלילה -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/textWelcome"
            android:layout_above="@id/actionButtons"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <!-- ScrollView לכל התוכן -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp">

                    <!-- תמונת הפרופיל הראשית - הקטנה מעט -->
                    <ImageView
                        android:id="@+id/imageProfile"
                        android:layout_width="0dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_placeholder_profile"
                        android:contentDescription="@string/profile_image"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- אייקון לב מרכזי לאנימציית Like -->
                    <ImageView
                        android:id="@+id/likeOverlay"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_heart"
                        android:alpha="0"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@id/imageProfile"
                        app:layout_constraintBottom_toBottomOf="@id/imageProfile"
                        app:layout_constraintStart_toStartOf="@id/imageProfile"
                        app:layout_constraintEnd_toEndOf="@id/imageProfile"/>

                    <!-- גרדיינט לכיסוי חלקו התחתון של התמונה -->
                    <View
                        android:id="@+id/gradientOverlay"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:background="@drawable/gradient_overlay"
                        app:layout_constraintBottom_toBottomOf="@id/imageProfile"
                        app:layout_constraintStart_toStartOf="@id/imageProfile"
                        app:layout_constraintEnd_toEndOf="@id/imageProfile" />

                    <!-- לוגו טיפוס + שם הטיפוס + אחוז התאמה -->
                    <LinearLayout
                        android:id="@+id/personalityLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="@id/imageProfile"
                        app:layout_constraintStart_toStartOf="@id/imageProfile">

                        <ImageView
                            android:id="@+id/imagePersonalityLogo"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/personality_logo" />

                        <TextView
                            android:id="@+id/textPersonalityType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="ENFP"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/textMatchPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="87% ❤️"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <!-- שם מלא -->
                    <TextView
                        android:id="@+id/textName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Noemi Slater"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/imageProfile"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- גלריית תמונות מטושטשות -->
                    <HorizontalScrollView
                        android:id="@+id/blurredScroll"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/textName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:id="@+id/blurredContainer"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginEnd="8dp"
                                android:scaleType="centerCrop"
                                android:contentDescription="@string/blurred_image" />
                        </LinearLayout>
                    </HorizontalScrollView>

                    <!-- כותרת לפרטים אישיים -->
                    <TextView
                        android:id="@+id/textDetailsHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="פרטים אישיים:"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/blurredScroll"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- אזור הפרטים האישיים - כל השאלות והתשובות -->
                    <LinearLayout
                        android:id="@+id/detailsLayout"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintTop_toBottomOf="@id/textDetailsHeader"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </com.google.android.material.card.MaterialCardView>

        <!-- ניווט תחתון -->
        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/bottom_navigation"
            android:layout_weight="1" />

        <include layout="@layout/activity_nevigation"
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:labelVisibilityMode="labeled"/>

    </RelativeLayout>

    <!-- תפריט הצד (Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />

</androidx.drawerlayout.widget.DrawerLayout>