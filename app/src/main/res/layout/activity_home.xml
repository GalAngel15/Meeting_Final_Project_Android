<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_purple">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- טקסט ברוכים הבאים -->
    <TextView
        android:id="@+id/textWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ברוך הבא, נועם"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/menu"
        android:contentDescription="@string/navigation_drawer_open"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- הכרטיס הראשי עם תמונה, פרטים וכפתורי לייק/איקס -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@+id/textWelcome"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- תמונת הפרופיל הראשית -->
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_profile"
                android:contentDescription="@string/profile_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintDimensionRatio="H,3:4" />

            <!-- גרדיינט לחציית טקסט על התמונה -->
            <View
                android:id="@+id/gradientOverlay"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:background="@drawable/gradient_overlay"
                app:layout_constraintBottom_toBottomOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="@id/imageProfile"
                app:layout_constraintEnd_toEndOf="@id/imageProfile" />

            <!-- לוגו טיפוס + שם הטיפוס + אחוז התאמה -->
            <LinearLayout
                android:id="@+id/personalityLayout"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="@id/imageProfile">

                <ImageView
                    android:id="@+id/imagePersonalityLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/personality_logo" />

                <TextView
                    android:id="@+id/textPersonalityType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="ENFP"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/textMatchPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="87% ❤️"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- שם מלא -->
            <TextView
                android:id="@+id/textName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Noemi Slater"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/imageProfile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- שורת פרטים (עיר • השכלה • תפקיד • תחביב) -->
            <LinearLayout
                android:id="@+id/detailsLayout"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/textName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🏙️ תל־אביב" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • 🎓 BSc"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • 💼 מפתחת"
                    android:layout_marginStart="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • ⚽️ כדורגל"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- גלריית תמונות מטושטשות (swiper אופקי) -->
            <HorizontalScrollView
                android:id="@+id/blurredScroll"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/detailsLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/blurredContainer"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:divider="?android:attr/dividerVertical"
                    android:showDividers="middle">

                    <!-- כל ImageView כאן נטען עם Glide + BlurTransformation -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/blurred_image" />
                    <!-- הוסף עוד כמה לפי הצורך -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- כפתורי פעולה -->
            <LinearLayout
                android:id="@+id/actionButtons"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintTop_toBottomOf="@id/blurredScroll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageButton
                    android:id="@+id/buttonDislike"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_button_circle"
                    android:src="@drawable/ic_unlike"
                    android:contentDescription="@string/dislike"/>

                <Space android:layout_width="32dp" android:layout_height="wrap_content"/>

                <ImageButton
                    android:id="@+id/buttonLike"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/bg_button_circle_like"
                    android:src="@drawable/ic_heart"
                    android:contentDescription="@string/like"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ניווט תחתון (הנחתי שה־menu כבר קיים) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- תפריט צד -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/drawer_header" />
</androidx.drawerlayout.widget.DrawerLayout>