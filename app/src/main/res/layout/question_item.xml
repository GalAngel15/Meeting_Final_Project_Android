<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- טקסט השאלה מיושר למרכז -->
        <TextView
            android:id="@+id/textViewQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:text="You regularly make new friends."/>

        <!-- שורת תשובות -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="9">

            <!-- Agree -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agree"
                android:textSize="10sp"
                android:textColor="@color/green"
                android:gravity="center"/>

            <!-- 7 כפתורי תשובה -->
            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_green_big"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_green_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_green_small"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_neutral"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_red_small"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_red_medium"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/answer7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/radio_selector_red_big"
                android:gravity="center"
                android:padding="8dp"
                android:text=""/>

            <!-- Disagree -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Disagree"
                android:textSize="10sp"
                android:textColor="@color/red"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
