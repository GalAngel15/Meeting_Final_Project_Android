<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/backgroundLight"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigation_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:background="@drawable/nav_button_bg_selector"
        app:backgroundTint="@null"
        android:text="Home"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/nav_text_tint_selector"
        app:icon="@drawable/ic_home"
        app:iconTint="@color/nav_icon_tint_selector"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigation_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:background="@drawable/nav_button_bg_selector"
        app:backgroundTint="@null"
        android:text="Profile"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/nav_text_tint_selector"
        app:icon="@drawable/ic_profile"
        app:iconTint="@color/nav_icon_tint_selector"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        android:gravity="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/navigation_chats"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp"
        android:background="@drawable/nav_button_bg_selector"
        app:backgroundTint="@null"
        android:text="Chats"
        android:textSize="12sp"
        android:textAllCaps="false"
        android:textColor="@color/nav_text_tint_selector"
        app:icon="@drawable/ic_chats"
        app:iconTint="@color/nav_icon_tint_selector"
        app:iconGravity="textTop"
        app:iconSize="24dp"
        android:gravity="center"/>

    <!-- כפתור ההתראות עם Badge -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/navigation_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:background="@drawable/nav_button_bg_selector"
            app:backgroundTint="@null"
            android:text="Notifications"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="@color/nav_text_tint_selector"
            app:icon="@drawable/ic_notifications"
            app:iconTint="@color/nav_icon_tint_selector"
            app:iconGravity="textTop"
            app:iconSize="24dp"
            android:gravity="center"/>

        <!-- Badge להתראות לא נקראו -->
        <TextView
            android:id="@+id/notification_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/notification_badge_bg"
            android:gravity="center"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end" />

    </FrameLayout>

</LinearLayout>