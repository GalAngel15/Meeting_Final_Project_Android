<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/notification_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground">

        <!-- תמונת פרופיל -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile"
            android:layout_marginEnd="12dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/purple" />

        <!-- תוכן ההתראה -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- שורה עליונה: כותרת וזמן -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="דני שלח לך הודעה"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorOnSurface"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="לפני 5 דקות"
                    android:textSize="12sp"
                    android:textColor="@color/colorOnSurface"
                    android:alpha="0.7"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- הודעה -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="היי איך הולך? אשמח להכיר אותך יותר..."
                android:textSize="14sp"
                android:textColor="@color/colorOnSurface"
                android:alpha="0.8"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- אייקון סוג התראה -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp">

            <ImageView
                android:id="@+id/iv_notification_type"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                app:tint="@color/colorPrimary"
                android:layout_marginBottom="4dp" />

            <!-- נקודה אדומה להתראות לא נקראו -->
            <View
                android:id="@+id/unread_indicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/unread_indicator"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>