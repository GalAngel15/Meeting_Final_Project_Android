<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- מצב “נבחר” – יוצג “בועה” סגולה מאחורי האייקון -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <!-- צבע הבועה הסגולה הבהירה -->
            <solid android:color="#E4D9FF"/>
            <!-- עומק הפינות כדי שהבועה תהיה בצורת קפסולה (אובל) -->
            <corners android:radius="20dp"/>
            <!-- גודל הבועה: כאן התאמנו ל־64dp רוחב ו־40dp גובה; אפשר לשנות אם צריך צורה אחרת -->
            <size android:width="64dp" android:height="40dp"/>
        </shape>
    </item>

    <!-- מצב “לא נבחר” – רקע שקוף -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>
