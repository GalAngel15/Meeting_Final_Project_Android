<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- מצב “נבחר” – יוצג “בועה” סגולה מסביב לאייקון+טקסט -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#E4D9FF"/>      <!-- צבע הבועה -->
            <corners android:radius="20dp"/>     <!-- פינות מעוגלות -->
            <!-- אין יותר <size>, כך ה-shape יתאים לגודל ה-MaterialButton -->
        </shape>
    </item>

    <!-- מצב “לא נבחר” – רקע שקוף -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>
