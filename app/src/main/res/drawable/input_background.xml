<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- פינות מעוגלות -->
    <corners android:radius="25dp"/>

    <!-- צבע רקע של השדה -->
    <solid android:color="@color/white"/>

    <!-- מסגרת לשדה הקלט -->
    <stroke
        android:width="2dp"
        android:color="@color/purple"/>

    <!-- Padding פנימי -->
    <padding
        android:left="10dp"
        android:right="10dp"/>
</shape>
